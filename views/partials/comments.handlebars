
{{#each this}}
  <div class="card">
    <div class="card-header">
      <a href="/post/{{id}}">{{title}}</a>
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p>{{comment}}</p>
        <footer class="blockquote-footer">
          {{user.username}} on {{format_date created_at}}
        </footer>
      </blockquote>
    </div>
  </div>
{{/each}}