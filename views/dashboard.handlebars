        </tr>
        
      </tbody>
    </table>
   </div>
    <div class="col" id="new-post">
      <h2 class="mb-3">Looking to battle or Trade?</h2>

      <form class="new-post-form">
        <div class="form-outline mb-4">
          <label class="form-label" for="post-title">Title</label>
          <input type="text" id="post-title" name="post-title" class="form-control"
            placeholder="Looking to trade or battle?" />
        </div>

        <div class="form-outline mb-4">
          <label class="form-label" for="post-text">Enter post text here </label>
          <textarea class="form-control" id="post-text" rows="4"
            placeholder="I'm looking to see who wants to battle/trade in PBD"></textarea>

        </div>

        <button type="submit" class="button">Post</button>

      </form>
    </div>
  </div>

{{!-- Edit Post --}}
  <hr>
  {{#if posts.length}}
  <section>
    <h2>Your Posts</h2>
    <ul class="list-group-flush">
      {{#each posts as |post|}}
      <li class="list-group-item">
        {{> post-info post}}
        <a id="edit-post" href="/dashboard/edit/{{post.id}}" class="edit-link"><i class="fas fa-edit"></i> Edit
          Post</a><br><br>
      </li>
      {{/each}}
    </ul>
  </section>
  {{/if}}
</div>

<script src="/js/newPost.js"></script>